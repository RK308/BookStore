<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for the list of pets -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/activity_padding"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/book_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:headerDividersEnabled="false"/>

    <LinearLayout
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_view_title"
            android:textSize="@dimen/book_title_text_size"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="@dimen/main_activity_image_width"
            android:layout_height="@dimen/main_activity_image_height"
            android:src="@drawable/book"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_view_subtitle"
            android:textSize="@dimen/book_title_text_size"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>